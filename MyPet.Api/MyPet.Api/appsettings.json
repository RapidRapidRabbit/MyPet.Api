{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Database=MyPetDatabase;Integrated Security=True"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",

  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },

  "JwtKey": "super mega secret key",
  "JwtIssuer": "http://localhost:5000",
  "JwtExpireDays": 1,

  "ImagesFolder": "/Images/",

  "EnableAdsPreModeration": true,

  "EmailConfiguration": {
    "Host": "smtp.gmail.com",
    "Port": 465,
    "RequiresAuthentication": true,
    "UserName": "mylovelypetapp@gmail.com",
    "Password": "lovelypetpass",
    "SenderName": "Your lovely pet",
    "SenderEmail": "ittestprofile@gmail.com",
    "EmailConfirmationLink": "http://localhost:3000/emailConfirmation"
  }
}
